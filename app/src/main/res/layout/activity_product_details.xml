<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLINEAR"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnSearchBar"
            android:layout_width="35dp"
            android:layout_height="@dimen/_30sdp"
            android:padding="6dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Quantity Selector -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/quantity_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quantity"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                 <ImageView
                     android:id="@+id/imgMinus"
                     android:layout_width="@dimen/_20sdp"
                     android:background="@drawable/bg_minus"
                     android:layout_height="@dimen/_20sdp"
                     android:src="@drawable/ic_minus"
                     app:tint="#F44242" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:text="1"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/imgPlus"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:tint="@color/green_dark"
                        android:background="@drawable/bg"
                        android:src="@drawable/ic_plus"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buy_once"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_6sdp"
                android:text="@string/buy_once"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/green_primary"
                app:icon="@drawable/ic_cart"
                app:iconTint="@color/green_primary"
                app:cornerRadius="@dimen/_10sdp"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="@dimen/_2sdp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_subscribe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="@string/subscribe"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:backgroundTint="@color/green_primary"
                app:cornerRadius="@dimen/_10sdp"
                style="@style/Widget.MaterialComponents.Button" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLINEAR"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Product Image Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_product_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                app:cardCornerRadius="@dimen/_24sdp"
                app:cardElevation="@dimen/_8sdp"
                android:background="@color/white"
                android:layout_margin="@dimen/_5sdp">

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ghee"
                    android:background="@color/white"
                    android:contentDescription="@string/product_image"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Product Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_14ssp"
                app:cardElevation="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FreshyZo A2 Cow Milk"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="@dimen/_2sdp" />
                    <!-- Price Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_current_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹45"
                            android:textSize="@dimen/_16ssp"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:id="@+id/tv_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:text="â‚¹50"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/text_secondary"
                            style="@style/StrikethroughText" />
                    </LinearLayout>

                    <!-- Feature Tags -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                      >

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_volume"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500ml"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/green_dark"
                            app:chipIcon="@drawable/close"
                            app:chipIconTint="@color/blue_primary"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_preservative"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100% Preservative-Free"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/green_dark"
                            app:chipIcon="@drawable/close"
                            app:chipIconTint="@color/blue_primary"
                            app:chipStrokeWidth="0dp" />

                    </com.google.android.material.chip.ChipGroup>



                    <!-- About Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_info"
                            android:contentDescription="@string/info" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="@string/about_product"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_300"/>

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/product_description"
                        android:textSize="@dimen/_10ssp"
                        android:lineSpacingExtra="@dimen/_4sdp"
                        android:textColor="@color/text_secondary" />


                    <!-- Key Benefits Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_check_circle"
                            android:contentDescription="@string/benefits" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="@string/key_benefits"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Benefits Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_20sdp"
                        android:columnCount="2"
                        android:rowCount="2"
                      android:layout_marginTop="-20dp"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false">

                        <!-- Benefit 1: Rich in Protein -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_6sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/benefit_bg"
                            app:strokeWidth="@dimen/_2sdp"
                            app:strokeColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_2sdp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ¥›"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:text="@string/rich_protein"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Benefit 2: High Calcium -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_6sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/benefit_bg"
                            app:strokeWidth="@dimen/_2sdp"
                            app:strokeColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_2sdp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’ª"
                                    android:textSize="@dimen/_15ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:text="@string/high_calcium"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Benefit 3: Easy Digestion -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_6sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/benefit_bg"
                            app:strokeWidth="@dimen/_2sdp"
                            app:strokeColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="âœ¨"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:text="@string/easy_digestion"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:gravity="center" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                        <!-- Benefit 4: Pure & Natural -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_6sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/benefit_bg"
                            app:strokeWidth="@dimen/_2sdp"
                            app:strokeColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸŒ¿"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:text="pure natural"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:gravity="center" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>