<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notificationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_80sdp"
        app:cardBackgroundColor="#EBEEED"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp"
        app:strokeWidth="0dp"
        android:layout_margin="@dimen/_3sdp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="@dimen/_5sdp">

            <!-- Notification Header -->
            <LinearLayout
                android:id="@+id/notificationHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/_8sdp">

                <!-- App Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_2sdp"
                   >

                    <ImageView
                        android:id="@+id/ivAppIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/app_icon"
                        android:scaleType="fitXY"
                     />

                </com.google.android.material.card.MaterialCardView>

                <!-- App Name and Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tvAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Freshyzo"
                        android:textSize="12sp"
                        android:textColor="#414941"
                        android:textStyle="bold"
                        android:letterSpacing="0.03" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:10 am"
                        android:textSize="12sp"
                        android:textColor="#414941"
                        android:layout_marginTop="@dimen/_2sdp" />

                </LinearLayout>

                <!-- New Notification Indicator -->
                <View
                    android:id="@+id/newIndicator"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@drawable/dahi"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:visibility="gone" />



            </LinearLayout>

            <!-- Notification Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_36sdp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="abcd"
                    android:textSize="14sp"
                    android:textColor="#191C1A"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/_4sdp" />

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="abcd"
                    android:textSize="14sp"
                    android:textColor="#414941" />

            </LinearLayout>

            <!-- Action Buttons (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_36sdp"
                android:paddingTop="@dimen/_12sdp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrimaryAction"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:text="View Order"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01"
                    app:cornerRadius="@dimen/_20sdp"
                    app:backgroundTint="#00C896"
                    android:textColor="#FFFFFF"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    app:elevation="0dp"
                    android:stateListAnimator="@null"
                    style="@style/Widget.MaterialComponents.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSecondaryAction"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Dismiss"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01"
                    app:cornerRadius="@dimen/_20sdp"
                    app:strokeColor="#717970"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="#00C896"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    app:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:layout_marginStart="@dimen/_8sdp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>